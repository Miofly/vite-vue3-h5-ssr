{
  "name": "vite-vue3-h5-ssr",
  "type": "module",
  "version": "3.0.0",
  "packageManager": "pnpm@8.4.0",
  "author": "lincenying <lincenying@qq.com>",
  "scripts": {
    "prepare": "sh simple-git-hooks.sh",
    "del": "sh delete-ts.sh",
    "serve": "nodemon server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "generate": "vite build --ssrManifest --outDir dist/static && npm run build:server && node prerender",
    "start": "cross-env NODE_ENV=production node server.js",
    "debug": "node --inspect-brk server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@lincy/utils": "^0.4.4",
    "@unhead/ssr": "^1.8.8",
    "@unhead/vue": "^1.8.8",
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "pinia": "^2.1.7",
    "qs": "^6.11.2",
    "store2": "^2.14.2",
    "vant": "4.8.0",
    "vue": "3.3.11",
    "vue-router": "4.2.5"
  },
  "devDependencies": {
    "@lincy/base-config": "^1.0.1",
    "@lincy/eslint-config": "^4.2.2",
    "@lincy/stylelint-config": "^1.15.11",
    "@lincy/vite-plugin-mock": "^3.0.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@unocss/eslint-plugin": "^0.58.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/server-renderer": "^3.3.11",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "lru-cache": "^10.1.0",
    "mockjs": "^1.1.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "postcss-px-to-viewport-8-plugin": "^1.2.3",
    "sass": "^1.69.5",
    "serve-static": "^1.15.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unocss": "^0.58.0",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-macros": "^2.7.0",
    "vite": "^5.0.6",
    "vite-plugin-inspect": "^0.8.1",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-warmup": "^0.1.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "esbuild",
        "postcss",
        "prettier"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": [
      "eslint --fix"
    ]
  }
}
